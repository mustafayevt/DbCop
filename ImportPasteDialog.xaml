<Window x:Class="DbCop.ImportPasteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Import Connections - Paste JSON" Height="500" Width="600"
        MinWidth="500" MinHeight="400"
        WindowStartupLocation="CenterOwner"
        Icon="DbCop.ico">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Instructions -->
        <TextBlock Grid.Row="0" Margin="0,0,0,10" TextWrapping="Wrap">
            <Run FontWeight="Bold">Paste Connection JSON</Run>
            <LineBreak/>
            Paste the JSON content containing database connections below.
            This should be JSON exported from DbCop or manually created in the correct format.
        </TextBlock>

        <!-- JSON Text Area -->
        <GroupBox Grid.Row="1" Header="JSON Content" Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBox Grid.Row="0" Name="JsonTextBox"
                         AcceptsReturn="True"
                         AcceptsTab="True"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         FontFamily="Consolas"
                         FontSize="11"
                         TextWrapping="NoWrap"
                         TextChanged="JsonTextBox_TextChanged"/>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                    <Button Name="ClearButton" Content="Clear" Width="60" Height="25" Margin="0,0,5,0"
                            Click="ClearButton_Click"/>
                    <Button Name="ValidateButton" Content="Validate JSON" Width="90" Height="25"
                            Click="ValidateButton_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Validation Status -->
        <TextBlock Grid.Row="2" Name="ValidationStatusTextBlock" Margin="0,10,0,10"
                   TextWrapping="Wrap" Foreground="Gray"
                   Text="Paste JSON content above and click 'Validate JSON' to check format"/>

        <!-- Dialog Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="ImportButton" Content="Import" Width="80" Height="30" Margin="0,0,10,0"
                    Click="ImportButton_Click" IsDefault="True" IsEnabled="False"/>
            <Button Name="CancelButton" Content="Cancel" Width="80" Height="30"
                    Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
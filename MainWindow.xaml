<Window x:Class="DbCop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DbCop - Database Sync Tool" Height="950" Width="950"
        MinWidth="950" MinHeight="950"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Source Database Section -->
        <GroupBox Grid.Row="0" Header="Source Database" Margin="0,0,0,10" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Connection:" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="0" Grid.Column="1" Name="SourceConnectionComboBox"
                          Margin="0,0,5,0" Height="25" VerticalContentAlignment="Center"
                          SelectionChanged="OnSourceConnectionSelected"/>
                <Button Grid.Row="0" Grid.Column="2" Name="TestSourceConnectionButton" Content="✓"
                        Width="35" Height="25" ToolTip="Test connection" Background="LightGreen"
                        Click="TestSourceConnectionButton_Click"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Database:" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="1" Grid.Column="1" Name="SourceDatabaseComboBox" IsEditable="True"
                          Margin="0,0,5,0" Height="25" VerticalContentAlignment="Center"/>
                <Button Grid.Row="1" Grid.Column="2" Name="LoadSourceDatabasesButton" Content="🔄"
                        Width="35" Height="25" ToolTip="Load databases from selected server"
                        Click="LoadSourceDatabasesButton_Click"/>
            </Grid>
        </GroupBox>

        <!-- Target Database Section -->
        <GroupBox Grid.Row="1" Header="Target Database" Margin="0,0,0,10" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Connection:" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="0" Grid.Column="1" Name="TargetConnectionComboBox"
                          Margin="0,0,5,0" Height="25" VerticalContentAlignment="Center"
                          SelectionChanged="OnTargetConnectionSelected"/>
                <Button Grid.Row="0" Grid.Column="2" Name="TestTargetConnectionButton" Content="✓"
                        Width="35" Height="25" ToolTip="Test connection" Background="LightGreen"
                        Click="TestTargetConnectionButton_Click"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Database:" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="1" Grid.Column="1" Name="TargetDatabaseComboBox" IsEditable="True"
                          Margin="0,0,5,0" Height="25" VerticalContentAlignment="Center"/>
                <Button Grid.Row="1" Grid.Column="2" Name="LoadTargetDatabasesButton" Content="🔄"
                        Width="35" Height="25" ToolTip="Load databases from selected server"
                        Click="LoadTargetDatabasesButton_Click"/>

                <CheckBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Name="UseWindowsAuthCheckBox"
                          Content="🔐 Windows Auth (from selected connection)" VerticalAlignment="Center" IsEnabled="False"
                          Checked="UseWindowsAuthCheckBox_Checked" Unchecked="UseWindowsAuthCheckBox_Unchecked"/>

                <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" Orientation="Vertical">
                    <Label Content="Sync Mode:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <RadioButton Name="BacpacFullCopyRadio" Content="📦 Full Copy (BACPAC) - Complete replacement with data"
                                 GroupName="SyncMode" IsChecked="True" Margin="0,2"/>
                    <RadioButton Name="DacpacSafeRadio" Content="📋 Safe Schema (DACPAC) - Preserve data, safe schema updates"
                                 GroupName="SyncMode" Margin="0,2"/>
                    <RadioButton Name="DacpacForceRadio" Content="⚡ Force Schema (DACPAC) - Force schema match, allow data loss"
                                 GroupName="SyncMode" Margin="0,2"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Tool Path Section -->
        <GroupBox Grid.Row="2" Header="SqlPackage Tool Path" Margin="0,0,0,10" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" Name="SqlPackagePathTextBox" Margin="0,0,10,0"
                         Height="30" VerticalContentAlignment="Center" IsReadOnly="True"/>
                <Button Grid.Column="1" Name="BrowseButton" Content="📁 Browse..."
                        Height="30" Margin="0,0,10,0" Click="BrowseButton_Click"/>
                <Button Grid.Column="2" Name="AutoDetectButton" Content="🔍 Auto"
                        Height="30" Click="AutoDetectButton_Click" ToolTip="Auto-detect SqlPackage.exe"/>
            </Grid>
        </GroupBox>

        <!-- Action Button -->
        <Button Grid.Row="3" Name="StartSyncButton" Content="🚀 Start Sync" Height="40" Width="140"
                HorizontalAlignment="Center" Margin="0,0,0,15" Click="StartSyncButton_Click"
                FontWeight="Bold" FontSize="14" Background="LightBlue"/>

        <!-- Options Section -->
        <GroupBox Grid.Row="4" Header="Sync &amp; Data Handling Options" Margin="0,0,0,10" Padding="10" Height="140">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Data Handling Options Row -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="💡 Three sync modes: BACPAC full copy, DACPAC safe schema, DACPAC force schema"
                               VerticalAlignment="Center" FontStyle="Italic" Margin="0,0,15,0"/>
                    <Button Name="DataHandlingInfoButton" Content="ℹ️" Width="25" Height="25"
                            FontSize="12" VerticalAlignment="Center"
                            ToolTip="Click for detailed data handling information" Click="DataHandlingInfoButton_Click"
                            Background="LightYellow"/>
                </StackPanel>

                <!-- General Options Row -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
                    <CheckBox Name="AutoScrollLogCheckBox" Content="📜 Auto-scroll log"
                              VerticalAlignment="Center" IsChecked="True" FontSize="12"
                              ToolTip="Automatically scroll to the bottom of the log"/>
                </StackPanel>

                <!-- Action Buttons Row -->
                <StackPanel Grid.Row="2" Orientation="Horizontal">
                    <Button Name="ManageConnectionsButton" Content="⚙️ Manage Connections"
                            Width="160" Height="30" Margin="0,0,10,0" Click="ManageConnectionsButton_Click"
                            ToolTip="Add, edit, or remove saved connections" Background="LightCyan"/>
                    <Button Name="AnalyzeConnectionButton" Content="🔍 Analyze Target"
                            Width="130" Height="30" Margin="0,0,10,0" Click="AnalyzeConnectionButton_Click"
                            ToolTip="Analyze target connection (local vs remote detection)" Background="LightYellow"/>
                    <Button Name="OpenLogFileButton" Content="📂 Open Log File Location"
                            Width="160" Height="30" Click="OpenLogFileButton_Click"
                            ToolTip="Open the folder containing the log file"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Log Console -->
        <GroupBox Grid.Row="5" Header="Log Console" Margin="0,0,0,10" Padding="10">
            <ScrollViewer Name="StatusScrollViewer" VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto">
                <TextBlock Name="StatusTextBlock" TextWrapping="Wrap" FontFamily="Consolas" FontSize="11"
                          Background="Black" Foreground="LightGreen" Padding="5"/>
            </ScrollViewer>
        </GroupBox>

        <!-- Progress Bar -->
        <StatusBar Grid.Row="6" Height="30">
            <StatusBarItem>
                <ProgressBar Name="SyncProgressBar" Width="200" Height="20" Minimum="0" Maximum="100"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Name="StatusBarText" Text="Ready" Margin="10,0,0,0" VerticalAlignment="Center"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
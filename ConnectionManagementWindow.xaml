<Window x:Class="DbCop.ConnectionManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Database Connections" Height="500" Width="600"
        MinWidth="550" MinHeight="450"
        WindowStartupLocation="CenterOwner"
        Icon="DbCop.ico">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Left Panel - Connection List -->
        <GroupBox Grid.Column="0" Header="Saved Connections" Margin="0,0,10,0" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ListBox Grid.Row="0" Name="ConnectionsListBox" SelectionChanged="ConnectionsListBox_SelectionChanged"/>

                <Button Grid.Row="1" Name="AddConnectionButton" Content="➕ Add New" Height="30" Margin="0,5,0,5"
                        Click="AddConnectionButton_Click"/>
                <Button Grid.Row="2" Name="RemoveConnectionButton" Content="🗑️ Remove Selected" Height="30" Margin="0,0,0,5"
                        Click="RemoveConnectionButton_Click" IsEnabled="False"/>

                <Separator Grid.Row="3" Margin="0,5,0,5"/>

                <Button Grid.Row="4" Name="ExportConnectionsButton" Content="📤 Export..." Height="30" Margin="0,0,0,5"
                        Click="ExportConnectionsButton_Click" ToolTip="Export connections to file"/>
                <Button Grid.Row="5" Name="ImportConnectionsButton" Content="📥 Import..." Height="30"
                        Click="ImportConnectionsButton_Click" ToolTip="Import connections from file or paste JSON"/>
            </Grid>
        </GroupBox>

        <!-- Right Panel - Connection Details -->
        <GroupBox Grid.Column="1" Header="Connection Details" Padding="10">
            <Grid Name="ConnectionDetailsGrid" IsEnabled="False">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Connection Name:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" Name="ConnectionNameTextBox" Height="25" Margin="0,0,0,10"
                         VerticalContentAlignment="Center"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Server:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="1" Name="ServerTextBox" Height="25" Margin="0,0,0,10"
                         VerticalContentAlignment="Center"/>

                <CheckBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Name="UseWindowsAuthCheckBox"
                          Content="Use Windows Authentication" Margin="0,0,0,10"
                          Checked="UseWindowsAuthCheckBox_Checked" Unchecked="UseWindowsAuthCheckBox_Unchecked"/>

                <Label Grid.Row="3" Grid.Column="0" Name="UserIdLabel" Content="User ID:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="3" Grid.Column="1" Name="UserIdTextBox" Height="25" Margin="0,0,0,10"
                         VerticalContentAlignment="Center"/>

                <Label Grid.Row="4" Grid.Column="0" Name="PasswordLabel" Content="Password:" VerticalAlignment="Center"/>
                <PasswordBox Grid.Row="4" Grid.Column="1" Name="PasswordBox" Height="25" Margin="0,0,0,10"
                             VerticalContentAlignment="Center"/>

                <Button Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Name="TestConnectionButton"
                        Content="🧪 Test Connection" Height="30" Margin="0,10,0,10"
                        Click="TestConnectionButton_Click"/>

                <TextBlock Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Name="TestResultTextBlock"
                           Margin="0,0,0,10" TextWrapping="Wrap"/>

                <Button Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Name="SaveConnectionButton"
                        Content="💾 Save Connection" Height="35" Margin="0,10,0,0"
                        Click="SaveConnectionButton_Click" Background="LightBlue"/>
            </Grid>
        </GroupBox>

        <!-- Bottom Panel - Dialog Buttons -->
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Name="OkButton" Content="OK" Width="80" Height="30" Margin="0,0,10,0"
                    Click="OkButton_Click" IsDefault="True"/>
            <Button Name="CancelButton" Content="Cancel" Width="80" Height="30"
                    Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>